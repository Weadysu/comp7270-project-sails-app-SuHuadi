<!--search.ejs-->

<%- include('components/nav') %>
<%- include('components/jumbotron') %>

<div class="row">
    <% rentals.forEach( function(model){ %>
    <div class="card col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
        <div class="row">
            <div class="imgWeight col-12 col-sm-12 col-md-4 col-md-12 col-lg-12 col-xl-12">
                <img class="rounded" src="<%= model.imageURL %>" style="object-fit: cover;" width="auto" />
            </div>

            <div class="imgHeight my-2 col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <h5><a class="m-2" href="/rental/details/<%=  model.id %>"><%= model.propertyTitle %></a></h5>
                <ul class="list-group m-2 col-12 col-sm-12 col-lg-12 col-xl-12">
                    <li class="list-group-item"><b>Estate: </b><%= model.estate %></li>
                    <li class="list-group-item"><b>Gross Area: </b><%= model.grossArea %> sq feet</li>
                    <li class="list-group-item"><b>Rent: </b>$<%= model.rent %></li>
                </ul>
            </div>
        </div>

        <br>
    </div>
    <% }); %>


    <% if ((req.method == 'GET' && Object.keys(req.query).length === 0 ) || (req.method == 'GET' && req.query.initFlag == '1')) { %>
    <% const current = parseInt(req.query.page) || 1; %>
    <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link"
                        href="/rental/search/?page=<%= Math.max(current-1, 1) %>&initFlag=1">Previous</a>
                </li>

                <% for (i = 1; i <= count; i++) { %>
                <li class="page-item">
                    <a class="page-link" href="/rental/search/?page=<%= i %>&initFlag=1"><%= i %></a>
                </li>
                <% }; %>

                <li class="page-item">
                    <a class="page-link"
                        href="/rental/search/?page=<%= Math.min(current+1, count) %>&initFlag=1">Next</a>
                </li>
            </ul>
        </nav>

        <% }; %>


        <% if (req.method == 'GET' && req.query.initFlag == '0') { %>
        <% const current = parseInt(req.query.page) || 1; %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link"
                            href="/rental/search/?page=<%= Math.max(current-1, 1) %>&initFlag=0&estate=<%= req.query.estate %>&bedrooms=<%= req.query.bedrooms %>&minArea=<%= req.query.minArea %>&maxArea=<%= req.query.maxArea %>&minRent=<%= req.query.minRent %>&maxRent=<%= req.query.maxRent %>">Previous</a>
                    </li>

                    <% for (i = 1; i <= count; i++) { %>
                    <li class="page-item">
                        <a class="page-link"
                            href="/rental/search/?page=<%= i %>&initFlag=0&estate=<%= req.query.estate %>&bedrooms=<%= req.query.bedrooms %>&minArea=<%= req.query.minArea %>&maxArea=<%= req.query.maxArea %>&minRent=<%= req.query.minRent %>&maxRent=<%= req.query.maxRent %>"><%= i %></a>
                    </li>
                    <% } %>

                    <li class="page-item">
                        <a class="page-link"
                            href="/rental/search/?page=<%= Math.min(current+1, count) %>&initFlag=0&estate=<%= req.query.estate %>&bedrooms=<%= req.query.bedrooms %>&minArea=<%= req.query.minArea %>&maxArea=<%= req.query.maxArea %>&minRent=<%= req.query.minRent %>&maxRent=<%= req.query.maxRent %>">Next</a>
                    </li>
                </ul>
            </nav>

            <% }; %>



            <% if (req.method == 'POST' ) { %>
            <% const current = parseInt(req.query.page) || 1; %>
            <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link"
                                href="/rental/search/?page=<%= Math.max(current-1, 1) %>&initFlag=0&estate=<%= req.body.Rental.estate %>&bedrooms=<%= req.body.Rental.bedrooms %>&minArea=<%= req.body.Rental.minArea %>&maxArea=<%= req.body.Rental.maxArea %>&minRent=<%= req.body.Rental.minRent %>&maxRent=<%= req.body.Rental.maxRent %>">Previous</a>
                        </li>

                        <% for (i = 1; i <= count; i++) { %>
                        <li class="page-item">
                            <a class="page-link"
                                href="/rental/search/?page=<%= i %>&initFlag=0&estate=<%= req.body.Rental.estate %>&bedrooms=<%= req.body.Rental.bedrooms %>&minArea=<%= req.body.Rental.minArea %>&maxArea=<%= req.body.Rental.maxArea %>&minRent=<%= req.body.Rental.minRent %>&maxRent=<%= req.body.Rental.maxRent %>"><%= i %></a>
                        </li>
                        <% }; %>

                        <li class="page-item">
                            <a class="page-link"
                                href="/rental/search/?page=<%= Math.min(current+1, count) %>&initFlag=0&estate=<%= req.body.Rental.estate %>&bedrooms=<%= req.body.Rental.bedrooms %>&minArea=<%= req.body.Rental.minArea %>&maxArea=<%= req.body.Rental.maxArea %>&minRent=<%= req.body.Rental.minRent %>&maxRent=<%= req.body.Rental.maxRent %>">Next</a>
                        </li>
                    </ul>
                </nav>

                <% }; %>
                <div class="container">
                    <h2>Property Search</h2>
                    <form action="/rental/search" method="POST">
                            <div class="form-group row">
                                <% if (Object.keys(req.query).length && req.query.initFlag == '0') { %>
                                <% var op_FC = (req.query.estate == 'Festival City')? 'Selected':''; %>
                                <% var op_TMC = (req.query.estate == 'Tin Ma Court')? 'Selected':''; %>
                                <% var op_COH = (req.query.estate == 'City One Shatin')? 'Selected':''; %>
                                <% }; %>
                                <% if (req.method == 'POST') { %>
                                <% var op_FC = (req.body.Rental.estate == 'Festival City')? 'Selected':''; %>
                                <% var op_TMC = (req.body.Rental.estate == 'Tin Ma Court')? 'Selected':''; %>
                                <% var op_COH = (req.body.Rental.estate == 'City One Shatin')? 'Selected':''; %>
                                <% }; %>

                                <label
                                    class="control-label col-3 col-sm-4 col-md-2 col-lg-3 col-xl-3"><b>Estate:</b></label>
                                <select class="col-9 col-sm-8 col-md-10 col-lg-9 col-xl-9" name="Rental[estate]">
                                    <option value>Select estate here</option>
                                    <option value="Festival City" <%= op_FC %>>Festival City</option>
                                    <option value="Tin Ma Court" <%= op_TMC %>>Tin Ma Court</option>
                                    <option value="City One Shatin" <%= op_COH %>>City One Shatin</option>
                                </select>
                            </div>

                            <div class="form-group row">
                                <% bedrooms= (Object.keys(req.query).length && req.query.initFlag == '0')? req.query.bedrooms:'' %>
                                <% bedrooms= (req.method == 'POST')? req.body.Rental.bedrooms:bedrooms %>
                                <label
                                    class="control-label col-4 col-sm-4 col-md-2 col-lg-5 col-xl-4"><b>Bedrooms:</b></label>
                                <input class="col-8 col-sm-8 col-md-10 col-lg-7 col-xl-8" type="number"
                                    name="Rental[bedrooms]" min="1" max="5" value="<%= bedrooms %>">
                            </div>
        
                        <div class="form-group">
                            <% minArea= (Object.keys(req.query).length && req.query.initFlag == '0')? req.query.minArea:'' %>
                            <% minArea= (req.method == 'POST')? req.body.Rental.minArea:minArea %>

                            <label class="control-label"><b>Area(Sq feet):</b></label><br>
                            <div class="row">
                                <label
                                    class="control-label col-4 col-sm-4 col-md-1 col-lg-3 col-xl-2"><b>Min:</b></label>
                                <input class="col-8 col-sm-8 col-md-5 col-lg-3 col-xl-4" type="number"
                                    name="Rental[minArea]" min="1" max="10000" value="<%= minArea %>">

                                <% maxArea= (Object.keys(req.query).length && req.query.initFlag == '0')? req.query.maxArea:'' %>
                                <% maxArea= (req.method == 'POST')? req.body.Rental.maxArea:maxArea %>
                                <label
                                    class="control-label col-4 col-sm-4 col-md-1 col-lg-3 col-xl-2"><b>Max:</b></label>
                                <input class="col-8 col-sm-8 col-md-5 col-lg-3 col-xl-4" type="number"
                                    name="Rental[maxArea]" min="1" max="10000" value="<%= maxArea %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <% minRent= (Object.keys(req.query).length && req.query.initFlag == '0')? req.query.minRent:'' %>
                            <% minRent= (req.method == 'POST')? req.body.Rental.minRent:minRent %>
                            <label class="control-label"><b>Rent(HK$):</b></label><br>
                            <div class="row">
                                <label
                                    class="control-label col-4 col-sm-4 col-md-1 col-lg-3 col-xl-2"><b>Min:</b></label>
                                <input class="col-8 col-sm-8 col-md-5 col-lg-3 col-xl-4" type="number"
                                    name="Rental[minRent]" min="1" max="500000" value="<%= minRent %>">

                                <% maxRent= (Object.keys(req.query).length && req.query.initFlag == '0')? req.query.maxRent:'' %>
                                <% maxRent= (req.method == 'POST')? req.body.Rental.maxRent:maxRent %>

                                <label
                                    class="control-label col-4 col-sm-4 col-md-1 col-lg-3 col-xl-2"><b>Max:</b></label>
                                <input class="col-8 col-sm-8 col-md-5 col-lg-3 col-xl-4" type="number"
                                    name="Rental[maxRent]" min="1" max="500000" value="<%= maxRent %>">

                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
            </div>
        </div>
        <br><br><br>
        <script>

            var imgH = $(".imgHeight").height();
            var w = $(".imgWeight").width();

            document.querySelectorAll("img").forEach(function (item) {
                item.height = 1.1 * imgH;
                item.setAttribute("width", w);
            });

        </script>